{
  "compilerOptions": {
    "target": "ES2019",
    "sourceMap": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "declaration": false,
    "pretty": false,
    "lib": [
      "ESNext"
    ],
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
